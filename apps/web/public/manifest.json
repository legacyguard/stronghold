  "shortcuts": [
    {
      "name": "Create New Will",
      "short_name": "New Will",
      "description": "Start creating a new will document",
      "url": "/will/create",
      "icons": [
        {
          "src": "/icons/shortcut-new-will.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My Documents",
      "short_name": "Documents",
      "description": "View and manage your will documents",
      "url": "/documents",
      "icons": [
        {
          "src": "/icons/shortcut-documents.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Sofia AI Assistant",
      "short_name": "Sofia",
      "description": "Get help from Sofia AI assistant",
      "url": "/sofia",
      "icons": [
        {
          "src": "/icons/shortcut-sofia.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Trust Seal Verification",
      "short_name": "Verify",
      "description": "Verify a Trust Seal",
      "url": "/verify",
      "icons": [
        {
          "src": "/icons/shortcut-verify.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+stronghold",
      "url": "/?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/pdf": [".pdf"],
        "application/json": [".json"]
      }
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Stronghold Will Generator Dashboard"
    },
    {
      "src": "/screenshots/mobile-wizard.png",
      "sizes": "375x667",
      "type": "image/png",
      "platform": "narrow",
      "label": "Will Creation Wizard on Mobile"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "document",
          "accept": ["application/pdf", "application/json", "text/plain"]
        }
      ]
    }
  }
}